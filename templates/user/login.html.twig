        <form action="{{ path('login') }}" method="POST">
            <div class="inputBox">
                <input type="email" id="username" required name="_username" value="{{ last_username }}"></input>
                <label>Email</label>
            </div>
            <div class="inputBox">
                <input type="password" id="password" required name="_password"></input>
                <label>Password</label>
            </div>
 
            <input type="submit" value="Submit"/>
            
        </form>

    </div>
{% endblock %}
